<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="2columns-left"/>

    <referenceContainer name="container">
        <container name="bm.sidebar" htmlTag="div" htmlClass="sidebar-wrapper">
            <container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar-sidebar-main">
                <container name="sidebar.main" as="sidebar_main" label="Sidebar Main"/>
            </container>


            <container name="div.sidebar.additional" htmlTag="div" htmlClass="sidebar-additional" after="div.sidebar.main">
                <container name="sidebar.additional" as="sidebar_additional" label="Sidebar Additional"/>
            </container>
        </container>

    </referenceContainer>

    <move element="bm.sidebar" destination="container" before="-" />

    <!--<move element="div.sidebar.main" destination="bm.sidebar" before="-"/>
    <move element="div.sidebar.additional" destination="bm.sidebar" before="-"/>-->
</layout>
