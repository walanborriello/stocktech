<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="scope_switcher"/>
    <body>
        <referenceContainer name="content">
            <block class="Thinkopen\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit" name="thinkopen_customercustomattributes_attribute_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Thinkopen\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Tabs" name="thinkopen_customercustomattributes_attribute_edit_tabs">
                <block class="Thinkopen\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Tab\Main" name="thinkopen_customercustomattributes_attribute_edit_tab_general"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general</argument>
                    <argument name="block" xsi:type="string">thinkopen_customercustomattributes_attribute_edit_tab_general</argument>
                </action>
                <block class="Thinkopen\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Tab\Options" name="thinkopen_customercustomattributes_attribute_edit_tab_options"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">options</argument>
                    <argument name="block" xsi:type="string">thinkopen_customercustomattributes_attribute_edit_tab_options</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="js">
            <block class="Thinkopen\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Js" name="js.customer_custom_attributes_attribute" template="Thinkopen_CustomerCustomAttributes::attribute/js.phtml"/>
        </referenceContainer>
    </body>
</page>
