<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote_address" resource="checkout" comment="Sales Flat Quote Address">
        <column xsi:type="int" name="wantinvoice" padding="5" unsigned="true" nullable="false" identity="false"
                default="0" comment="Want Invoice"/>
        <column xsi:type="int" name="customer_invoice_type" padding="5" unsigned="true" nullable="false" identity="false"
                default="0" comment="Customer Invoice Type"/>
        <column xsi:type="varchar" name="fiscal_code_id" length="255" nullable="true" comment="Fiscal Code"/>
        <column xsi:type="varchar" name="pec" length="255" nullable="true" comment="Pec"/>
        <column xsi:type="varchar" name="sdi" length="255" nullable="true" comment="Sdi"/>
    </table>
    <table name="sales_order_address" resource="sales" comment="Sales Flat Order Address">
        <column xsi:type="int" name="wantinvoice" padding="5" unsigned="true" nullable="false" identity="false"
                default="0" comment="Want Invoice"/>
        <column xsi:type="int" name="customer_invoice_type" padding="5" unsigned="true" nullable="false" identity="false"
                default="0" comment="Customer Invoice Type"/>
        <column xsi:type="varchar" name="fiscal_code_id" length="255" nullable="true" comment="Fiscal Code"/>
        <column xsi:type="varchar" name="pec" length="255" nullable="true" comment="Pec"/>
        <column xsi:type="varchar" name="sdi" length="255" nullable="true" comment="Sdi"/>
    </table>
</schema>
